{
  "name": "ghost-mail",
  "version": "1.0.0",
  "scripts": {
    "build:client": "bun --filter ./packages/client build",
    "build:database": "bun --filter ./packages/database build",
    "build:smtp-server": "bun --filter ./packages/smtp-server build",
    "dev:client": "bun --filter ./packages/client dev",
    "dev:smtp-server": "bun run --filter ./packages/smtp-server dev",
    "lint:client": "bun --filter ./packages/client lint",
    "lint:database": "bun --filter ./packages/database lint",
    "lint:smtp-server": "bun --filter ./packages/smtp-server lint",
    "start:client": "bun --filter ./packages/client start",
    "start:smtp-server": "bun --filter ./packages/smtp-server start",
    "test:smtp-server": "bun --filter ./packages/smtp-server test",
    "typecheck:client": "bun --filter ./packages/client typecheck",
    "typecheck:database": "bun --filter ./packages/database typecheck",
    "typecheck:smtp-server": "bun --filter ./packages/smtp-server typecheck"
  },
  "author": "joseph",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eddeee888/gcg-typescript-resolver-files": "^0.9.4",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/near-operation-file-preset": "^3.0.0",
    "@graphql-codegen/typescript-react-apollo": "^4.3.0",
    "@parcel/watcher": "^2.4.1",
    "ts-node": "^10.9.2",
    "@types/bun": "latest"
  },
  "dependencies": {
    "graphql": "^16.9.0",
    "graphql-scalars": "^1.23.0",
    "typescript": "^5.5.2"
  },
  "workspaces": [
    "./packages/*"
  ],
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "module": "index.ts",
  "type": "module"
}
